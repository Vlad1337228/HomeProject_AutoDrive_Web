@model Site1.Data.Models.Car
@addTagHelper *,Microsoft.AspNet.Mvc.TegHelpers
<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name">
    <h2>@Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" @*href="#"*@ asp-controller="ShopCart" asp-action="AddToCart" asp-route-carId="@Model.id">Добавить в корзину</a></p>
</div>